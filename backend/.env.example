# Starknet 自动续费服务环境变量示例
# 复制此文件为 .env 并填入实际值

# ===========================================
# 区块链网络配置
# ===========================================

# Starknet 网络 (sepolia, mainnet)
NETWORK=sepolia

# 服务私钥 (通过 wrangler secret 设置，不要在此文件中填写)
# PRIVATE_KEY=your_private_key_here

# ===========================================
# API 配置
# ===========================================

# API 密钥 (通过 wrangler secret 设置，不要在此文件中填写)
# API_KEY=your_api_key_here

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# ===========================================
# 续费处理配置
# ===========================================

# 续费检查间隔 (分钟)
RENEWAL_CHECK_INTERVAL=5

# 最大重试次数
MAX_RETRY_COUNT=3

# 续费提前时间 (小时)
RENEWAL_ADVANCE_HOURS=24

# ===========================================
# 数据库配置
# ===========================================

# D1 数据库绑定名称
DB_BINDING=SUBSCRIPTION_DB

# KV 存储绑定名称
KV_BINDING=SUBSCRIPTION_KV

# ===========================================
# 缓存配置
# ===========================================

# 订阅计划缓存时间 (秒)
PLAN_CACHE_TTL=3600

# 处理器状态缓存时间 (秒)
STATUS_CACHE_TTL=300

# ===========================================
# 安全配置
# ===========================================

# CORS 允许的源
CORS_ORIGINS=*

# 请求速率限制 (每分钟)
RATE_LIMIT_PER_MINUTE=100

# ===========================================
# 监控配置
# ===========================================

# 启用性能监控
ENABLE_PERFORMANCE_MONITORING=true

# 启用错误追踪
ENABLE_ERROR_TRACKING=true

# ===========================================
# 开发配置
# ===========================================

# 开发模式
DEV_MODE=false

# 调试模式
DEBUG=false

# ===========================================
# 部署说明
# ===========================================

# 1. 复制此文件为 .env
# 2. 填入非敏感配置值
# 3. 使用 wrangler secret 设置敏感信息：
#    wrangler secret put PRIVATE_KEY
#    wrangler secret put API_KEY
# 4. 更新 wrangler.toml 中的资源 ID
# 5. 运行部署脚本：./scripts/deploy.sh